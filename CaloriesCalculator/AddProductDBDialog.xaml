<Window x:Class="CaloriesCalculator.AddProductDBDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaloriesCalculator"
        mc:Ignorable="d"
        Title="AddProductDBDialog" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название продукта:"/>
            <TextBox Name="productNameTextBox" Margin="0,5,0,15" Width="200"/>

            <TextBlock Text="Калорийность (на 100г):"/>
            <TextBox Name="caloriesTextBox" Margin="0,5,0,15" Width="200"/>

            <TextBlock Text="Белки (на 100г):"/>
            <TextBox Name="proteinTextBox" Margin="0,5,0,15" Width="200"/>

            <TextBlock Text="Жиры (на 100г):"/>
            <TextBox Name="fatTextBox" Margin="0,5,0,15" Width="200"/>

            <TextBlock Text="Углеводы (на 100г):"/>
            <TextBox Name="carbohydratesTextBox" Margin="0,5,0,15" Width="200"/>

            <TextBlock Text="Клетчатка (на 100г):"/>
            <TextBox Name="fiberTextBox" Margin="0,5,0,15" Width="200"/>

            <Button Content="ОК" Click="OK_Click" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
